#!/bin/bash
#shellcheck disable=SC2034
COLOR_BLACK=0
COLOR_RED=1
COLOR_GREEN=2
COLOR_YELLOW=3
COLOR_BLUE=4
COLOR_MAGENTA=5
COLOR_CYAN=6
COLOR_WHITE=7
FG_BLACK="\033[30m"
FG_RED="\033[31m"
FG_GREEN="\033[32m"
FG_YELLOW="\033[33m"
FG_BLUE="\033[34m"
FG_MAGENTA="\033[35m"
FG_CYAN="\033[36m"
FG_WHITE="\033[37m"
COLOR_CLEAR="\033[0m"
COLOR_PROMPRT=""
TPUT_COLOR=""

if [[ "$TERM" =~ color ]]; then
	COLOR_PROMPRT="True"
fi
if command -v tput &>/dev/null && [[ "$COLOR_PROMPRT" == "True" ]]; then
	TPUT_COLOR="True"
fi
